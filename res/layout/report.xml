<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="fill_parent" android:weightSum="100" 
	android:background="@drawable/nightfall">
	<!--	Top Half-->


	<ScrollView android:layout_width="match_parent"
		android:layout_height="0dp" android:id="@+id/scrollView1"
		android:layout_weight="90">

		<TextView android:layout_width="fill_parent"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="REPORT" android:gravity="left" android:layout_height="wrap_content"
			android:id="@+id/tvReport"></TextView>

	</ScrollView>

	<!--	Bottom Half-->
	<LinearLayout 
		android:orientation="vertical" android:layout_width="match_parent"
		android:layout_height="wrap_content" android:layout_weight="10">
		<!-- Select Your Gun TEXT -->
		<TextView android:layout_width="fill_parent"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="Select 2 Guns" android:gravity="center"
			android:layout_height="wrap_content" android:id="@+id/textView1"></TextView>
		<!--  Gun Rack -->
		<LinearLayout 
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<Button android:drawableTop="@drawable/rackpistol" android:id="@+id/bSelectPistol"
				android:textSize="25dp" android:layout_width="wrap_content"
				android:text="10" android:layout_gravity="center"
				android:layout_height="wrap_content"></Button>
			<Button android:drawableTop="@drawable/rackshotgun"
				android:id="@+id/bSelectShotgun" android:textSize="25dp"
				android:layout_width="wrap_content" android:text="10"
				android:layout_gravity="center" android:layout_height="wrap_content"></Button>
			<Button android:drawableTop="@drawable/racksmg" android:id="@+id/bSelectSMG"
				android:textSize="25dp" android:layout_width="wrap_content"
				android:text="90" android:layout_gravity="center"
				android:layout_height="wrap_content"></Button>
			<Button android:drawableTop="@drawable/rackrifle" android:id="@+id/bSelectRifle"
				android:textSize="25dp" android:layout_width="wrap_content"
				android:text="12" android:layout_gravity="center"
				android:layout_height="wrap_content"></Button>

		</LinearLayout>
		<!--  Buff Bar -->
		<LinearLayout 
			android:orientation="horizontal" android:layout_width="match_parent"
			android:layout_height="wrap_content"></LinearLayout>
		<!-- Begin Button -->
		<Button android:text="Begin" android:id="@+id/bBegin"
			android:layout_width="fill_parent" android:layout_height="wrap_content"></Button>


	</LinearLayout>

</LinearLayout>
